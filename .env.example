# Database (PostgreSQL)
DATABASE_URL=postgresql://unfolde:password@localhost:5432/unfolde

# Security
JWT_SECRET=change-me-to-a-random-string

# S3-compatible storage (Cloudflare R2, MinIO, etc.)
S3_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com
S3_BUCKET=unfolde-media
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=auto
MEDIA_BASE_URL=https://media.your-domain.com

# Analytics
ANALYTICS_SALT=change-me-to-a-random-string

# Tenant configuration
TENANT_SLUG=my-portfolio

# Site URL (for password reset links, etc.)
# SITE_URL=https://your-domain.com

# Seed — used by `npx prisma db seed` (first run only)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# Email (optional — without this, emails are logged to console)
# MAILGUN_API_KEY=key-xxx
# MAILGUN_DOMAIN=mg.your-domain.com
# MAIL_FROM=noreply@your-domain.com
