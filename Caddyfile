{
	# Wildcard cert via Cloudflare DNS challenge
	acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

# Root domain + wildcard subdomains
unfol.de, *.unfol.de {
	reverse_proxy app:3000
}

# Additional root domains (add as needed)
wtco.io, *.wtco.io {
	reverse_proxy app:3000
}

biarritz.digital, *.biarritz.digital {
	reverse_proxy app:3000
}

